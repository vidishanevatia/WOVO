<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_hello"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Welcome Back!"
        android:textColor="@color/FontColor"
        android:textSize="@dimen/_15sdp"/>

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_below="@+id/tv_hello"
        android:layout_width="@dimen/_270sdp"
        android:layout_height="wrap_content"
        android:foreground="@drawable/border"
        android:layout_marginTop="@dimen/_70sdp"
        android:layout_centerInParent="true">
        <View
            android:id="@+id/v_1"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:background="@color/FontColor" />
        <EditText
            android:id="@+id/et_cc"
            android:layout_below="@+id/v_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerHorizontal="true"
            android:background="@color/white"
            android:hint="Company Code"
            />

        <View
            android:id="@+id/v_2"
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:layout_below="@+id/et_cc"
            android:background="@color/FontColor" />


        <EditText
            android:id="@+id/et_ee"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_below="@+id/v_2"
            android:layout_centerInParent="true"
            android:hint="Employee ID"
            android:background="@color/white"

            />

        <View
            android:id="@+id/v_3"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/et_ee"
            android:background="@color/FontColor" />



        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_below="@+id/v_3"
            android:hint="Password"
            android:inputType="textPassword"
            android:background="@color/white"

            />






    </RelativeLayout>

    <CheckBox
        android:id="@+id/cb_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_below="@id/rl"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/FontColor"
        android:text="Keep me logged in"
        android:layout_toRightOf="@+id/cb_1"
        android:layout_below="@id/rl"
        android:layout_marginTop="@dimen/_20sdp"/>

    <Button
        android:id="@+id/bt_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_40sdp"
        android:layout_marginRight="@dimen/_40sdp"
        android:layout_below="@+id/cb_1"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="Login"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:fontFamily="@Fonts/Roboto-Bold.ttf"
        android:background="@drawable/registerborder" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_forgot"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_login"
        android:text="Forgot Password"
        android:textStyle="bold"
        android:textColor="@color/FontColor"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_below="@+id/tv_forgot"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_70sdp"
        android:textColor="@color/FontColor"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_toLeftOf="@+id/tv_register"
        android:background="@color/FontColor"
        android:layout_marginTop="@dimen/_78sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_below="@id/tv_forgot"
        android:layout_marginLeft="@dimen/_15sdp"
        />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_toRightOf="@+id/tv_register"
        android:layout_below="@+id/tv_forgot"
        android:background="@color/FontColor"
        android:layout_marginTop="@dimen/_78sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        />








</RelativeLayout>