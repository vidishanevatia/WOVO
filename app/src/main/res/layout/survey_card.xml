<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_height="105dp"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    card_view:cardCornerRadius="15dp"
    android:clickable="true"
    card_view:cardElevation="16sdp"
    card_view:cardMaxElevation="20dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="@dimen/_12sdp"

    >
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rl_root_view_survey"
        >

        <ImageView
            android:id="@+id/Pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_centerVertical="true"
            android:background="@drawable/surveycard"
            android:layout_marginRight="@dimen/_20sdp"/>

        <TextView
            android:layout_width="200dp"
            android:id="@+id/tvs_heading"
            android:textSize="16sp"
            android:layout_toEndOf="@id/Pic"
            android:text="Survey Testing 136979"
            android:textStyle="bold"
            android:textColor="@color/FontColor"
            android:maxLines="1"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"/>



        <TextView
            android:id="@+id/tvs_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvs_heading"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_toEndOf="@id/Pic"
            android:text="24.05.19"
            android:textSize="16sp"
            android:textColor="@color/barDown"/>




        <TextView
            android:id="@+id/tvs_status"
            android:layout_toEndOf="@+id/Pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvs_date"
            android:gravity="center"
            android:textColor="@color/FontColor"
            android:text="Completed"
            android:textStyle="italic"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tvs_st"
            android:layout_toEndOf="@+id/Pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvs_status"
            android:gravity="center"
            android:textColor="@color/FontColor"
            android:text="SurveyTesting"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/Pic2"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_30sdp"
            app:srcCompat="@drawable/rightarrow"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_10sdp"/>








    </RelativeLayout>
</androidx.cardview.widget.CardView>