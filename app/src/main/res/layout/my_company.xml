<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp">

    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@drawable/border"
        >
        <ImageView
            android:id="@+id/iv_doc"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/doc"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10sdp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Edit.xlsx"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_toRightOf="@id/iv_doc"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/border"
        android:layout_below="@id/rl_1"
        >
        <ImageView
            android:id="@+id/iv_doc2"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/doc"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10sdp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Edit.xlsx"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_toRightOf="@id/iv_doc2"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/border"
        android:layout_below="@id/rl_2"
        >
        <ImageView
            android:id="@+id/iv_doc3"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/doc"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10sdp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Edit.xlsx"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_toRightOf="@id/iv_doc3"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/border"
        android:layout_below="@id/rl_3"
        >
        <ImageView
            android:id="@+id/iv_doc4"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/doc"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10sdp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Edit.xlsx"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_toRightOf="@id/iv_doc4"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_below="@id/rl_4"
        >
        <ImageView
            android:id="@+id/iv_faq"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/faq"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10sdp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Frequently Asked Questions"
            android:textStyle="bold"
            android:textColor="@color/FontColor"
            android:textSize="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_toRightOf="@id/iv_faq"/>
    </RelativeLayout>




</RelativeLayout>